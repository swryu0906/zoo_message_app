<div class="">
  <h1 class="text-center">Post Details</h1>
  <h2 class="text-center"><%= @post.title %></h2>
  <h4 class="text-right">Posted by <%= @post.user.username %></h4>
  <br>
  <p><%= @post.body %></p>
  <p class="text-right">
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-success" %>
    <%= link_to "Delete", post_path(@post), method: :delete, class: "btn btn-success" %>
    <%= link_to "Go back to Post List", posts_path, class: "btn btn-danger" %>
  </p>
</div>

<%= render partial: 'comments/form' %>


<h3 class="text-center">Comments (<%= @post.comments.size %>)</h3>

<%= render partial: 'posts/comment', collection: @post.comments %>
