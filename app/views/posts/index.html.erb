<h1>Posts List</h1>

<%= link_to "Add a New Post", new_post_path %>
<% @posts.each do |post| %>
<div class="">
  <h2><%= post.title %></h2>
  <p><%= post.body %></p>
  <p>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= link_to "Detail", post_path(post) %>
    <%= link_to "Delete", post_path(post), method: :delete %>
  </p>
</div>
<% end %>
