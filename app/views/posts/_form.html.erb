<div class="">
<%= form_for(@post) do |f| %>
  <div class="form-group">
    <h4><%= f.label :title %></h4>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <h4><%= f.label :body %></h4>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
